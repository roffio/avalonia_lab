<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:avalonia_test.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1050" d:DesignHeight="720"
        x:Class="avalonia_test.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="avalonia_test">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="25" />
      <RowDefinition Height="2*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" 
               FontWeight="Bold" FontStyle="Italic" Margin="0,10,0,10"
               Text="АксиОМА Контрол" />

    <StackPanel Grid.Row="1" Width="120" Margin="10,0,0,0">
      <ToggleButton Content="Главная" Width="120" IsChecked="True"/>
      <ToggleButton Content="Мониторинг" Width="120" Margin="0,10,0,0"/>
      <ToggleButton Content="Анализ" Width="120" Margin="0,10,0,0"/>
      <ToggleButton Content="Отчёт" Width="120" Margin="0,10,0,0"/>

      <TextBlock Text="Тип Станка" FontSize="12" FontWeight="Bold" FontStyle="Italic" Margin="0,30,0,0"/>
      <ComboBox Width="120" Height="30" Margin="0,10,0,0"
                ItemsSource="{Binding MachineTypes}" SelectedIndex="0" />

      <TextBlock Text="Имя Станка" FontSize="12" FontWeight="Bold" FontStyle="Italic" Margin="0,10,0,0"/>
      <ComboBox Width="120" Height="30" Margin="0,10,0,0"
                ItemsSource="{Binding MachineNames}" SelectedIndex="0" />

      <Rectangle Fill="LightGray" Width="120" Height="120" Margin="0,30,0,0"/>

      <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
        <Button Content="K"/>
        <Button Content="B" Margin="4,0,0,0"/>
        <Button Content="L" Margin="4,0,0,0"/>
        <Button Content="R" Margin="4,0,0,0"/>
      </StackPanel>

      <TextBlock Text="Проект 2" FontSize="12" FontWeight="Bold" FontStyle="Italic" Margin="0,10,0,0"/>
      <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
        <Button Content="K"/>
        <Button Content="B" Margin="4,0,0,0"/>
        <Button Content="L" Margin="4,0,0,0"/>
        <Button Content="R" Margin="4,0,0,0"/>
      </StackPanel>

      <Button Content="Auto" Margin="0,10,0,0" Width="120"/>
    </StackPanel>
  </Grid>
</Window>
