<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1050" d:DesignHeight="720"
        x:Class="avalonia_test.MainWindow"
        Title="avalonia_test">
  <Grid>
    <Grid.ColumnDefinitions>
       <ColumnDefinition Width="*"></ColumnDefinition>
       <ColumnDefinition Width="2*"></ColumnDefinition>
       <ColumnDefinition Width="2*"></ColumnDefinition>
   </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="25" />
        <RowDefinition Height="2*" />
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" 
               Margin="10" FontWeight="Bold" 
               Text="АксиОМА Контрол" HorizontalAlignment="Center"
              VerticalAlignment="Center" FontStyle="Italic"1/>
    <!--<Button Content="Enabled"/>-->
    <StackPanel Grid.Row="1" Width="120">
    <StackPanel Grid.Row="1" Width="120">
          <ToggleButton Content="Главная" Width="120" IsChecked="True"/>
          <ToggleButton Content="Мониторинг" Width="120" Margin="0,10,0,0"/>
          <ToggleButton Content="Анализ" Width="120" Margin="0,10,0,0"/>
          <ToggleButton Content="Отчёт" Width="120" Margin="0,10,0,0"/>
    </StackPanel>
    <StackPanel Grid.Row="1" Width="120" Margin="0,30,0,0">
      <TextBlock Text="Тип Станка" FontSize="12" FontWeight="Bold" FontStyle="Italic"/>
    </StackPanel>
    </StackPanel>

  </Grid>
</Window>
