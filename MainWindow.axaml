<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:avalonia_test" mc:Ignorable="d" d:DesignWidth="1050" d:DesignHeight="720"
        x:Class="avalonia_test.MainWindow"
        Title="АксиОМА Контрол - KSU/1538">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>   <ColumnDefinition Width="3*"/>   <ColumnDefinition Width="2.2*"/>  </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />   <RowDefinition Height="*" />      </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="0,0,0,1" BorderBrush="LightGray" Padding="10,5">
            <TextBlock Text="АксиОМА Контрол" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,0,1,0" BorderBrush="LightGray">
            <StackPanel Margin="10" Spacing="5">
                <ToggleButton Content="Главная" IsChecked="True" HorizontalContentAlignment="Left" Padding="10,8"/>
                <ToggleButton Content="Мониторинг" HorizontalContentAlignment="Left" Padding="10,8"/>
                <ToggleButton Content="Анализ" HorizontalContentAlignment="Left" Padding="10,8"/>
                <ToggleButton Content="Отчёт" HorizontalContentAlignment="Left" Padding="10,8" Margin="0,0,0,15"/>

                <TextBlock Text="Тип станка:" FontWeight="SemiBold" Margin="0,10,0,3"/>
                <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="3-координатный вертикально-фрезерный"/>
                    <ComboBoxItem Content="5-координатный токарный"/>
                </ComboBox>

                <TextBlock Text="Наименование станка:" FontWeight="SemiBold" Margin="0,10,0,3"/>
                <ComboBox SelectedIndex="0" HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="KSU/1538"/>
                    <ComboBoxItem Content="Model XYZ/2024"/>
                </ComboBox>

                <Border BorderBrush="Gray" BorderThickness="1" Height="160" Margin="0,15,0,0" CornerRadius="3" Background="#ECECEC">
                    <TextBlock Text="[Изображение KSU/1538]" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </Border>

                <Grid ColumnDefinitions="*,*,*,*" Margin="0,15,0,5" HorizontalAlignment="Stretch">
                    <Button Grid.Column="0" Content="X" Margin="0,0,2,0"/>
                    <Button Grid.Column="1" Content="Y" Margin="2,0,2,0"/>
                    <Button Grid.Column="2" Content="Z" Margin="2,0,2,0"/>
                    <Button Grid.Column="3" Content="C" Margin="2,0,0,0"/>
                </Grid>
                <Button Content="Auto" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/> <ColumnDefinition Width="2.2*"/> </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <RowDefinition Height="2.2*" MinHeight="250"/> <RowDefinition Height="1.8*" MinHeight="200"/> </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="3-координатный вертикально-фрезерный KSU/1538"
                           FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10"/>

                <DockPanel Grid.Row="1" Margin="10,0,5,5" LastChildFill="True">
                    <TextBlock Text="График загрузки оборудования" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8" DockPanel.Dock="Top"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5" Margin="0,0,0,8" DockPanel.Dock="Top">
                        <DatePicker SelectedDate="2021-05-19" VerticalAlignment="Center"/>
                        <DatePicker SelectedDate="2021-03-23" VerticalAlignment="Center"/>
                        <ComboBox Width="105" SelectedIndex="0" VerticalAlignment="Center">
                            <ComboBoxItem Content="23.03.2021"/>
                        </ComboBox>
                        <Button Content="Выход" Padding="10,5" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,8,0,5" DockPanel.Dock="Bottom">
                        <StackPanel Orientation="Horizontal" Spacing="4"><Ellipse Fill="DarkGray" Width="12" Height="12"/><TextBlock Text="Выключен" FontSize="11" VerticalAlignment="Center"/></StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4"><Ellipse Fill="Orange" Width="12" Height="12"/><TextBlock Text="Нагрузка" FontSize="11" VerticalAlignment="Center"/></StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4"><Ellipse Fill="DarkGreen" Width="12" Height="12"/><TextBlock Text="Включен" FontSize="11" VerticalAlignment="Center"/></StackPanel>
                    </StackPanel>
                    <Panel Background="#F5F5F5" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="80" MaxHeight="200">
                            <Border Background="DarkGreen" Height="46" Margin="0,1,0,0">
                                <TextBlock Text="23" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                            </Border>
                            <Border Background="Orange" Height="72" Margin="0,1,0,0">
                                 <TextBlock Text="36" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
                            </Border>
                            <Border Background="DarkGray" Height="82" Margin="0,1,0,0"/>
                        </StackPanel>
                        <TextBlock Text="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,2" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,42" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,82" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,122" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,162" FontSize="10" Foreground="Gray"/>
                        <TextBlock Text="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5,2" FontSize="10" Foreground="Gray"/>
                    </Panel>
                </DockPanel>

                <DockPanel Grid.Row="2" Margin="10,5,5,10" LastChildFill="True">
                     <TextBlock Text="График работы за текущие сутки" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8" DockPanel.Dock="Top"/>
                     <Button Content="Выход" Padding="10,5" HorizontalAlignment="Right" DockPanel.Dock="Bottom" Margin="0,8,0,0"/>
                     <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,8,0,5" DockPanel.Dock="Bottom">
                        <StackPanel Orientation="Horizontal" Spacing="4"><Ellipse Fill="DarkGray" Width="12" Height="12"/><TextBlock Text="Выключен" FontSize="11" VerticalAlignment="Center"/></StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4"><Ellipse Fill="Orange" Width="12" Height="12"/><TextBlock Text="Нагрузка" FontSize="11" VerticalAlignment="Center"/></StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4"><Ellipse Fill="DarkGreen" Width="12" Height="12"/><TextBlock Text="Включен" FontSize="11" VerticalAlignment="Center"/></StackPanel>
                     </StackPanel>
                     <Panel Background="#F5F5F5" Margin="5">
                        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Grid.RowDefinitions> <RowDefinition Height="*"/> <RowDefinition Height="Auto"/> </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="DarkGray" MinHeight="20" Height="30" VerticalAlignment="Bottom" Margin="1,0"/>
                                <Border Grid.Column="1" Background="Orange" MinHeight="20" Height="50" VerticalAlignment="Bottom" Margin="1,0"/>
                                <Border Grid.Column="2" Background="DarkGreen" MinHeight="20" Height="70" VerticalAlignment="Bottom" Margin="1,0"/>
                                <Border Grid.Column="3" Background="Orange" MinHeight="20" Height="40" VerticalAlignment="Bottom" Margin="1,0"/>
                                <Border Grid.Column="4" Background="DarkGreen" MinHeight="20" Height="60" VerticalAlignment="Bottom" Margin="1,0"/>
                                <Border Grid.Column="5" Background="DarkGreen" MinHeight="20" Height="60" VerticalAlignment="Bottom" Margin="1,0"/>
                                <Border Grid.Column="6" Background="Orange" MinHeight="20" Height="30" VerticalAlignment="Bottom" Margin="1,0"/>
                                <Border Grid.Column="7" Background="DarkGray" MinHeight="20" Height="20" VerticalAlignment="Bottom" Margin="1,0"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="0" TextAlignment="Left" FontSize="10"/> <TextBlock Grid.Column="1" Text="3" TextAlignment="Left" FontSize="10"/>
                                <TextBlock Grid.Column="2" Text="6" TextAlignment="Left" FontSize="10"/> <TextBlock Grid.Column="3" Text="9" TextAlignment="Left" FontSize="10"/>
                                <TextBlock Grid.Column="4" Text="12" TextAlignment="Left" FontSize="10"/> <TextBlock Grid.Column="5" Text="15" TextAlignment="Left" FontSize="10"/>
                                <TextBlock Grid.Column="6" Text="18" TextAlignment="Left" FontSize="10"/> <TextBlock Grid.Column="7" Text="21" TextAlignment="Left" FontSize="10"/>
                            </Grid>
                        </Grid>
                        <TextBlock Text="24" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,2,0"/>
                    </Panel>
                </DockPanel>
            </Grid>

            <Border Grid.Column="1" BorderThickness="1,0,0,0" BorderBrush="LightGray">
                <StackPanel Margin="10,0,5,5" Spacing="5">
                    <TextBlock Text="Текущие значения компонентов" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,8"/>
                    <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" ItemWidth="100" Margin="0,0,0,5">
                        <Button Content="Шпиндель" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="Ось X" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="Ось Y" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="Ось Z" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="ЧПУ" Margin="2" HorizontalAlignment="Stretch"/>
                    </WrapPanel>
                    <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" ItemWidth="100" Margin="0,0,0,10">
                        <Button Content="Панель оператора" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="Смазочный пульс" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="Пневмосистема" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="Магазин" Margin="2" HorizontalAlignment="Stretch"/>
                        <Button Content="Питание" Margin="2" HorizontalAlignment="Stretch"/>
                    </WrapPanel>

                    <DataGrid Name="componentsDataGrid"
                              x:DataType="local:DummyComponentItem" 
                              AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column"
                              CanUserResizeColumns="True" CanUserReorderColumns="False"
                              VerticalAlignment="Stretch" MaxHeight="500">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="1.6*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="0.8*"/>
                            <DataGridTextColumn Header="Значение" Binding="{Binding Value}" Width="0.8*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>