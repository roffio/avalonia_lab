<Window
  x:Class="avalonia_test.MainWindow"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="clr-namespace:avalonia_test.ViewModels"
  Title="avalonia_test"
  d:DesignHeight="720"
  d:DesignWidth="1050"
  x:DataType="vm:MainWindowViewModel"
  mc:Ignorable="d">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="2*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="25" />
      <RowDefinition Height="*" /> 
      <RowDefinition Height="Auto" /> 
    </Grid.RowDefinitions>

    <TextBlock
      Grid.Row="0"
      Grid.Column="0"
      Margin="0,10,0,10"
      HorizontalAlignment="Center"
      FontStyle="Italic"
      FontWeight="Bold"
      Text="АксиОМА Контрол" />

    <StackPanel
      Grid.Row="1"
      Width="120"
      Margin="10,0,0,0">
      <ToggleButton
        Width="120"
        Content="Главная"
        IsChecked="True" />
      <ToggleButton
        Width="120"
        Margin="0,10,0,0"
        Content="Мониторинг" />
      <ToggleButton
        Width="120"
        Margin="0,10,0,0"
        Content="Анализ" />
      <ToggleButton
        Width="120"
        Margin="0,10,0,0"
        Content="Отчёт" />

      <TextBlock
        Margin="0,30,0,0"
        FontSize="12"
        FontStyle="Italic"
        FontWeight="Bold"
        Text="Тип Станка" />
      <ComboBox
        Width="120"
        Height="30"
        Margin="0,10,0,0"
        ItemsSource="{Binding MachineTypes}"
        SelectedItem="{Binding SelectedMachineType, Mode=TwoWay}" />

      <TextBlock
        Margin="0,10,0,0"
        FontSize="12"
        FontStyle="Italic"
        FontWeight="Bold"
        Text="Имя Станка" />
      <ComboBox
        Width="120"
        Height="30"
        Margin="0,10,0,0"
        ItemsSource="{Binding MachineNames}"
        SelectedItem="{Binding SelectedMachineName, Mode=TwoWay}" />

      <Rectangle
        Width="120"
        Height="120"
        Margin="0,30,0,0"
        Fill="LightGray" />

      <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
        <Button Content="K" />
        <Button Margin="4,0,0,0" Content="B" />
        <Button Margin="4,0,0,0" Content="L" />
        <Button Margin="4,0,0,0" Content="R" />
      </StackPanel>

      <TextBlock
        Margin="0,10,0,0"
        FontSize="12"
        FontStyle="Italic"
        FontWeight="Bold"
        Text="{Binding ProjectText}" />
      <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
        <Button Content="K" />
        <Button Margin="4,0,0,0" Content="B" />
        <Button Margin="4,0,0,0" Content="L" />
        <Button Margin="4,0,0,0" Content="R" />
      </StackPanel>

      <Button
        Width="120"
        Margin="0,10,0,0"
        Content="Auto" />
    </StackPanel>

    <TextBlock
      Grid.Row="0"
      Grid.Column="1"
      Grid.ColumnSpan="2"
      Margin="0,10,0,10"
      HorizontalAlignment="Center"
      FontStyle="Italic"
      FontWeight="Bold"
      Text="{Binding HeaderText}" />


    <StackPanel Grid.Row="1" Grid.Column="1">
      <TextBlock
        Margin="0,10,0,10"
        HorizontalAlignment="Center"
        FontStyle="Italic"
        FontWeight="Bold"
        Text="График загрузки компонентов" />

      <StackPanel
        Margin="0,0,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Orientation="Horizontal">
        <TextBlock
          Margin="0,0,5,0"
          VerticalAlignment="Center"
          Text="Start Date:" />
        <DatePicker SelectedDate="{Binding StartDate}" />
        <TextBlock
          Margin="15,0,5,0"
          VerticalAlignment="Center"
          Text="End Date:" />
        <DatePicker SelectedDate="{Binding EndDate}" />
      </StackPanel>

      <lvc:CartesianChart
        Height="300"
        Margin="10,10,10,10"
        HorizontalAlignment="Stretch"
        LegendPosition="Bottom"
        Series="{Binding ChartSeries}"
        YAxes="{Binding YAxes}" />

      <TextBlock
        Margin="0,20,0,10"
        HorizontalAlignment="Center"
        FontStyle="Italic"
        FontWeight="Bold"
        Text="Активность станка за последние 24 часа" />

      <lvc:CartesianChart
        Height="100"
        Margin="10,0,10,10"
        HorizontalAlignment="Stretch"
        LegendPosition="Right"
        Series="{Binding TimelineSeries}"
        XAxes="{Binding TimelineXAxes}"
        YAxes="{Binding TimelineYAxes}" />


    </StackPanel>

    <StackPanel Grid.Row="1" Grid.Column="2">
      <TextBlock
      Grid.Row="1"
      Grid.Column="2"
      Margin="0,10,0,10"
      HorizontalAlignment="Center"
      FontStyle="Italic"
      FontWeight="Bold"
      Text="Текущие Значения Компонентов" />

      <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
        <Button Content="K" />
        <Button Margin="4,0,0,0" Content="B" />
        <Button Margin="4,0,0,0" Content="L" />
        <Button Margin="4,0,0,0" Content="R" />
      </StackPanel>


      <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
        <Button Content="K" />
        <Button Margin="4,0,0,0" Content="B" />
        <Button Margin="4,0,0,0" Content="L" />
        <Button Margin="4,0,0,0" Content="R" />
      </StackPanel>
    </StackPanel>
  </Grid>
</Window>